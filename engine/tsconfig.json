{
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "bundler",
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowImportingTsExtensions": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }